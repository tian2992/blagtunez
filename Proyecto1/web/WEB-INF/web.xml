<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>testServlet</servlet-name>
        <servlet-class>blagtunez.testServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>parseXML</servlet-name>
        <servlet-class>blagtunez.parseXML</servlet-class>
    </servlet>
    <servlet><servlet-name>mailer</servlet-name><servlet-class>blagtunez.mailer</servlet-class></servlet>
    <servlet>
        <servlet-name>fileUplo</servlet-name>
        <servlet-class>blagtunez.fileUplo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testServlet</servlet-name>
        <url-pattern>/testServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>parseXML</servlet-name>
        <url-pattern>/parseXML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mailer</servlet-name>
        <url-pattern>/mailer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>fileUplo</servlet-name>
        <url-pattern>/fileUplo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
